<div id="admin_edit_user" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                   
                    <div class="form-group">
                        <label>Name <span class="text-danger">*</span></label>
                        <input class="form-control" id="editname" type="text" required>
                    </div>
                    <label class="focus-label">Role<span class="text-danger">*</span></label>
                        <div class="form-group form-focus select-focus">
                            <select class="select floating" id="editrole">
                                <option value="Employee"> Employee </option>
                                <option value="Admin"> Admin </option>
                            </select>
                        </div>
                    
                    <p id="error1" class="text-center text-danger"></p>
                    <div class="form-group">
                        <input class="form-control" id="editid" type="text" hidden>
                    </div>
                    <p id="ps" class="text-center text-danger"></p>
                    <div class="submit-section">
                        <button class="btn btn-primary submit-btn" onclick="updateuser()">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
